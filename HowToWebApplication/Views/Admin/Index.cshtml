    <button class="btn btn-success">
        @Html.ActionLink("მომხმარებლის მოთხოვნები", "RequestsList", "Users", new { id = LoginHelper.CurrentUser().Id },null)
    </button>
}




@helper btnHelper(string linkName, string actionName, string controllerName)
{
    <br />
    <br />
    <button class="btn btn-success">
        @Html.ActionLink(linkName, actionName, controllerName, null, new { @style = "color:white" })
    </button>
}
