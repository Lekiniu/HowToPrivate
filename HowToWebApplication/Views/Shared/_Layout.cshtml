<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @*<title>@ViewBag.Title - My ASP.NET Application</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")*@
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />

    <!-- js files -->
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>


    <!-- datatables css -->
    <link href="~/Scripts/datatableLib/DataTables-1.10.18/css/dataTables.semanticui.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.1/semantic.min.css" rel="stylesheet" />

    <link href="~/Content/_popUpSharedStyle.css" rel="stylesheet" />

    

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("მთავარი", "Index", "Admin", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <h1>Admin-HowTo</h1>
        @RenderBody()
        <hr />

        <!-- modal placeholder-->
        <div id='myAccountModal' class='modal fade in'>
            <div class="modal-dialog">
                <div class="modal-content">
                    <div id='myAccountModalContent'></div>
                </div>
            </div>
        </div>

        <div id='myLoginModal' class='modal fade in'>
            <div class="modal-dialog">
                <div class="modal-content">
                    <div id='myLoginModalContent'></div>
                </div>
            </div>
        </div>

        <footer></footer>
    </div>



    @*@Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")*@


    <!-- js files -->

    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <script src="~/Scripts/Json Scripts/registerJson.js"></script>


    @RenderSection("scripts", required: false)



</body>
</html>
